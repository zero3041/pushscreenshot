{
  "manifest_version": 3,
  "name": "PushScreenshot",
  "version": "1.0.0",
  "description": "Capture screenshots and upload to ImgBB instantly",
  "permissions": [
    "activeTab",
    "storage",
    "downloads",
    "tabCapture",
    "desktopCapture",
    "clipboardWrite",
    "contextMenus",
    "scripting"
  ],
  "action": {
    "default_popup": "src/popup/index.html",
    "default_icon": {
      "16": "public/icons/icon16.png",
      "32": "public/icons/icon32.png",
      "48": "public/icons/icon48.png",
      "128": "public/icons/icon128.png"
    }
  },
  "options_page": "src/options/index.html",
  "background": {
    "service_worker": "src/background/index.ts",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content/index.ts"],
      "run_at": "document_idle"
    }
  ],
  "commands": {
    "capture-visible": {
      "suggested_key": {
        "default": "Alt+Shift+V"
      },
      "description": "Capture visible area"
    },
    "capture-full": {
      "suggested_key": {
        "default": "Alt+Shift+F"
      },
      "description": "Capture full page"
    },
    "capture-area": {
      "suggested_key": {
        "default": "Alt+Shift+A"
      },
      "description": "Capture selected area"
    },
    "start-recording": {
      "suggested_key": {
        "default": "Alt+Shift+R"
      },
      "description": "Start recording"
    }
  },
  "icons": {
    "16": "public/icons/icon16.png",
    "32": "public/icons/icon32.png",
    "48": "public/icons/icon48.png",
    "128": "public/icons/icon128.png"
  }
}
